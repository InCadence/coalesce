<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<jxb:bindings version="2.1"
              xmlns:jxb="http://java.sun.com/xml/ns/jaxb"
              xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <jxb:globalBindings>
        <!-- use JODA-Time DateTime for xs:date -->
        <jxb:javaType name="org.joda.time.DateTime" xmlType="xs:date"
            parseMethod="Coalesce.Common.Helpers.DateTimeConverter.parseDate"
            printMethod="Coalesce.Common.Helpers.DateTimeConverter.printDate"/>
    </jxb:globalBindings>        
</jxb:bindings>