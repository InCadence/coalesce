<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>coalesce-pom</artifactId>
    <groupId>com.incadencecorp.coalesce</groupId>
    <version>0.0.12-SNAPSHOT</version>
    <relativePath>../Coalesce.Pom/pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>coalesce-core</artifactId>
  <packaging>bundle</packaging>
  <name>Coalesce Core</name>
  <description>Contains the meta model used to create entities.</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.2</version>
        <executions>
          <execution>
            <goals>
              <goal>test-jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <minimizeJar>false</minimizeJar>
              <artifactSet>
                <includes>
                  <include>org.imgscalr:imgscalr-lib</include>
                  <include>com.drewnoakes:metadata-extractor</include>
                  <include>xerces:xercesImpl</include>
                </includes>
              </artifactSet>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>${maven.bundle.version}</version>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-Name>${project.name}</Bundle-Name>
            <Bundle-SymbolicName>${project.groupId}.${project.artifactId}</Bundle-SymbolicName>
            <Export-Package>${project.groupId}.api,
                            ${project.groupId}.api.persistance,
                            ${project.groupId}.mapper.impl,
                            ${project.groupId}.common.exceptions,
                            ${project.groupId}.common.helpers,
                            ${project.groupId}.framework,
                            ${project.groupId}.framework.util,
                            ${project.groupId}.framework.iterators,
                            ${project.groupId}.framework.exim.impl,
                            ${project.groupId}.framework.compareables,
                            ${project.groupId}.framework.datamodel,
                            ${project.groupId}.framework.persistance,
                            ${project.groupId}.framework.validation,
                            ${project.groupId}.framework.validation.api,
                            ${project.groupId}.framework.enumerationprovider.impl,
                            ${project.groupId}.framework.jobs,
                            ${project.groupId}.framework.tasks,
                            ${project.groupId}.handlers</Export-Package>
            <Private-Package>${project.groupId}.framework.datamodel.generated,
                            com.drew*,
                            org.imgscalr*,
                            org.apache.xerces*,
                            com.adobe.xmp*</Private-Package>
            <Import-Package>org.joda.time*;version="[1.6.2, 3)",
                            *</Import-Package>
          </instructions>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.cxf</groupId>
        <artifactId>cxf-xjc-plugin</artifactId>
        <version>${cxf.version}</version>
        <executions>
          <execution>
            <id>generate-sources</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>xsdtojava</goal>
            </goals>
            <configuration>
              <sourceRoot>${basedir}/target/generated-sources/cxf</sourceRoot>
              <xsdOptions>
                <xsdOption>
                  <xsd>${basedir}/schema/Entity.xsd</xsd>
                  <packagename>com.incadencecorp.coalesce.framework.datamodel</packagename>
                  <bindingFile>${basedir}/schema/DataTypeBindings.xml</bindingFile>
                  <extension>true</extension>
                </xsdOption>
              </xsdOptions>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.codehaus.jettison</groupId>
      <artifactId>jettison</artifactId>
      <version>1.3.7</version>
