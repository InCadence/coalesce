<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>persister-neo4j-feature</artifactId>
	<packaging>feature</packaging>
	<name>Coalesce Neo4j Persister Feature</name>
	<description>Karaf feature for the Memory persister</description>

	<parent>
		<groupId>com.incadencecorp.coalesce.framework.persistance</groupId>
		<artifactId>persister-neo4j-parent</artifactId>
		<version>0.0.25-SNAPSHOT</version>
		<relativePath>..</relativePath>
	</parent>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.karaf.tooling</groupId>
				<artifactId>karaf-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

	<dependencies>

		<dependency>
			<groupId>com.incadencecorp.coalesce</groupId>
			<artifactId>coalesce-framework-persister-neo4j</artifactId>
			<exclusions>
				<exclusion>
					<groupId>org.geotools</groupId>
					<artifactId>*</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.geotools.xsd</groupId>
					<artifactId>*</artifactId>
				</exclusion>
				<exclusion>
					<artifactId>commons-logging</artifactId>
					<groupId>commons-logging</groupId>
				</exclusion>
				<exclusion>
					<artifactId>xercesImpl</artifactId>
					<groupId>xerces</groupId>
				</exclusion>
				<exclusion>
					<artifactId>stax-api</artifactId>
					<groupId>stax</groupId>
				</exclusion>
				<exclusion>
					<artifactId>jaxb2-basics</artifactId>
					<groupId>*</groupId>
				</exclusion>
				<exclusion>
					<artifactId>scala-library</artifactId>
					<groupId>org.scala-lang</groupId>
				</exclusion>
				<exclusion>
					<artifactId>
						org.apache.servicemix.bundles.restlet
					</artifactId>
					<groupId>org.apache.servicemix.bundles</groupId>
				</exclusion>
				<exclusion>
					<artifactId>mysema-commons-lang</artifactId>
					<groupId>com.mysema.commons</groupId>
				</exclusion>
				<exclusion>
					<artifactId>org.apache.felix.log</artifactId>
					<groupId>org.apache.felix</groupId>
				</exclusion>
				<exclusion>
					<artifactId>scala-reflect</artifactId>
					<groupId>org.scala-lang</groupId>
				</exclusion>
				<exclusion>
					<artifactId>jsslutils</artifactId>
					<groupId>org.jsslutils</groupId>
				</exclusion>
				<exclusion>
					<groupId>com.incadencecorp.coalesce</groupId>
					<artifactId>coalesce-core</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>

</project>
