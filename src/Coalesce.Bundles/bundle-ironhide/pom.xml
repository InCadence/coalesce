<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.incadencecorp.coalesce.bundles</groupId>
    <artifactId>bundle-ironhide</artifactId>
    <packaging>bundle</packaging>
    <name>Coalesce IronHide OSGi Bundle</name>
    <description>This OSGi bundle simply wraps the IronHide artifacts.</description>

    <parent>
        <groupId>com.incadencecorp.coalesce.framework.persistance</groupId>
        <artifactId>persister-elasticsearch-parent</artifactId>
        <version>0.0.45-SNAPSHOT</version>
        <relativePath>../../Coalesce.Framework.Persistance/elasticsearch</relativePath>
    </parent>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-Name>${project.name}</Bundle-Name>
                        <Bundle-SymbolicName>${project.groupId}.${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Version>${project.version}</Bundle-Version>
                        <Export-Package>
                            org.elasticsearch.*;version=${elasticsearch.version};-split-package:=merge-last,
                            mil.nga.giat.data.elasticsearch*;version=${elasticgeo.version}
                        </Export-Package>
                        <Import-Package>
                            org.joda.time*;version="[1.6.2, 3)",
                            org.joda.time.format;version="[1.6.2, 3)",
                            *;resolution:=optional
                        </Import-Package>
                        <Embed-Dependency>
                            *;artifactId=!org.osgi.compendium;scope=compile|runtime;type=!pom;inline=false
                        </Embed-Dependency>
                        <Embed-Transitive>true</Embed-Transitive>
                    </instructions>
                </configuration>

            </plugin>
        </plugins>
    </build>

    <dependencies>
<!--
        <dependency>
            <groupId>ironhide</groupId>
            <artifactId>ironhide-client</artifactId>
            <version>${ironhide.version}</version>
        </dependency>
-->
        <dependency>
            <groupId>org.elasticsearch</groupId>
            <artifactId>elasticsearch</artifactId>
            <version>${elasticsearch.version}</version>
        </dependency>
        <dependency>
            <groupId>org.elasticsearch.client</groupId>
            <artifactId>transport</artifactId>
            <version>${elasticsearch.version}</version>
        </dependency>
        <dependency>
            <groupId>mil.nga.giat</groupId>
            <artifactId>gt-elasticsearch</artifactId>
            <version>${elasticgeo.version}</version>
        </dependency>

        <dependency>
            <artifactId>joda-time</artifactId>
            <groupId>joda-time</groupId>
            <version>${joda.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <artifactId>commons-logging</artifactId>
            <groupId>commons-logging</groupId>
            <version>1.1.3</version>
            <scope>provided</scope>
        </dependency>

    </dependencies>

    <repositories>
        <repository>
            <id>devforce</id>
            <name>DevForce repository</name>
            <url>https://nexus.devforce.io/content/groups/public</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

</project>
